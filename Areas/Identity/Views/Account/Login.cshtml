@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_LoginLayout";
}

<!-- Nested Row within Card Body -->
<div class="row">
    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Đăng nhập</h1>
            </div>
            <form class="user" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]"
                method="post" role="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="UserNameOrEmail" class="form-control form-control-user" />
                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-user" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox custom-control custom-checkbox small">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">Đăng nhập</button>
                <hr>

            </form>
            @{
                var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
                var loginProviders = schemes.ToList();
                if (loginProviders.Count == 0)
                {

                }
                else
                {
                    string className = "btn btn-google btn-user btn-block";
                    string icon = "";
                    <form class="user" asp-controller="Account" asp-action="ExternalLogin"
                        asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                        <div>
                            <p>
                                @foreach (var provider in loginProviders)
                                {
                                    if (provider.Name == "Google")
                                    {
                                        icon = "<i class='fab fa-google'></i>";
                                    }
                                    if (provider.Name == "Facebook")
                                    {
                                        icon = "<i class=\"fab fa-facebook-f\"></i>";
                                        className = "btn btn-facebook btn-user btn-block";
                                    }
                                    <button type="submit" class="@className" name="provider" value="@provider.Name"
                                        title="Log in using your @provider.Name account">
                                        @Html.Raw(icon)
                                        Đăng nhập với @provider.Name
                                    </button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
            <hr>
            <div class="text-center">
                <a class="small" asp-action="ForgotPassword">Quyên mật khẩu?</a>
            </div>
            <div class="text-center">
                <a class="small" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">
                    Chưa có tài khoản? Đăng ký</a>
            </div>
        </div>
    </div>
</div>
