@using Microsoft.AspNetCore.Authorization

@inject IAuthorizationService authorization

@{
    var result = await authorization.AuthorizeAsync(this.User, "ViewAdminMenu");
}

@if (result.Succeeded)
{

    <div class="dropdown open">
        <button class="btn btn-outline-danger dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Manager
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
            <a class="dropdown-item" asp-action="Index" asp-controller="DbManager" asp-area="Database">Database</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Contact" asp-area="Contact">Quản lý liên hệ</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Role" asp-area="Identity">Quản lý Role</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="User" asp-area="Identity">Quản lý thành viên</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Category" asp-area="Blog">Quản lý danh mục Blog</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Post" asp-area="Blog">Quản lý bài viết Blog</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="FileManager" asp-area="Files">Quản lý Files</a>
        </div>
    </div>
}