            <a class="dropdown-item" asp-action="Index" asp-controller="Post" asp-area="Blog">Quản lý bài viết Blog</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="CategoryProduct" asp-area="Product">Quản lý danh mục sản phẩm</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="ProductManager" asp-area="Product">Quản lý sản phẩm</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="FileManager" asp-area="Files">Quản lý Files</a>
        </div>
    </div>
}