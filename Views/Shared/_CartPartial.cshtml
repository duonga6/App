@inject App.Areas.Product.Services.CartService _cartService;

@{
    var cart = _cartService.GetCartItems();

    if (cart.Count() > 0)
    {
        <div class="nav-item"><a class="text-warning" asp-action="Cart" asp-controller="ViewProduct"><i class="fas fa-shopping-cart"></i> (@cart.Count())</a></div>
    }
}